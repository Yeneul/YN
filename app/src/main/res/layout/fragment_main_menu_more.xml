    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#55BBD2" >

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/icon_login" />

        <Button
            android:id="@+id/bw_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/btn_login_arrow"
            android:background="#00ff0000"
            android:fontFamily="@font/notosanskr_medium"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/notice_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="공지사항"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="고객센터"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />
    <Button
        android:id="@+id/set_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="설정"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />

</LinearLayout>