<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.SetFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnback"
            android:background="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="설정"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_regular"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        android:text="서비스 이용 설정"
        android:gravity="left|center"
        android:paddingLeft="20dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="위치 정보 이용 동의"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        android:text="이용약관"
        android:gravity="left|center"
        android:paddingLeft="20dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="이용약관"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="개인정보 취급방침"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="위치 기반 서비스 이용 약관"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        android:text="기타"
        android:gravity="left|center"
        android:paddingLeft="20dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="로그아웃"
        android:textColor="#666666"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/btn_list_arrow"
        android:background="@drawable/more_button_style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="앱버전"
            android:textColor="#666666"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:gravity="left|center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver 1.0"
            android:textColor="#666666"
            android:textSize="16dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9" />

</LinearLayout>